		<turret baseUrl="turrets/smoky/m2">
			<id>Smoky M2</id>
			<modelFile type="a3d">turret.a3d</modelFile>
			<texture id="diffuse.atf">diffuse.atf</texture>
			<texture id="normalmap.atf">normalmap.atf</texture>
